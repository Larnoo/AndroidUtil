<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zxl.androidtools">


    <!--往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/label_test" />
        <activity
            android:name=".ui.SwitchButtonActivity"
            android:label="@string/label_switch" />
        <activity
            android:name=".ui.FlowLayoutActivty"
            android:label="@string/label_flow" />
        <activity
            android:name=".ui.MarqueeActivity"
            android:label="@string/label_marquee" />
        <activity
            android:name=".ui.TestXmlActivity"
            android:label="@string/label_xml" />
        <activity
            android:name=".ui.TestHttpActivity"
            android:label="@string/label_http" />
        <activity
            android:name=".ui.CircleWaveActivity"
            android:label="@string/label_circlewave" />
        <activity
            android:name=".ui.TestDialogActivity"
            android:label="@string/label_testdialog" />
    </application>

</manifest>